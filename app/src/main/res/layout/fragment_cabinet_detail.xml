<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eli.cabinetdatabase.CabinetDetail$PlaceholderFragment">

    <ImageView android:layout_width="400dp"
        android:layout_height="300dp"
        android:gravity="top"
        android:id="@+id/cabImg"
        ></ImageView>

    <TextView android:layout_below="@+id/cabImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cabInfo"
        android:text="TEST"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"></TextView>

</RelativeLayout>
</ScrollView>